<div class="postCard" id="{{_id}}">
    {{#unless isCurrentUserPost}}
    <div>
        <img width="50" height="50"
            src="/static/images/{{#if ownerId.profilePic}}{{ownerId.profilePic}}{{else}}profile.png{{/if}}">
        <p>{{ownerId.username}}</p>
    </div>
    {{/unless}}
    <p>{{text}}</p>
    {{#if images}}
    {{#each images}}
    <img width="500px" height="700px" src="/static/images/{{this}}">
    {{/each}}
    <div class="postActions">
        {{/if}}
        <p>{{likesCount}}</p>
        {{#if isLiked}}
        <a href="javascript:void(0)">Liked</a>
        {{else}}
        {{#unless isCurrentUserPost}}
        <a href="javascript:void(0)">Like</a>
        {{/unless}}
        {{/if}}
        <a href="javascript:void(0)">Comments</a>
        {{#if isCurrentUserPost}}
        <a href="javascript:void(0)">Delete</a>
        {{/if}}
    </div>
</div>